    %h2 IP Adressen
    %table.table.table-striped
      %thead
        %tr
          %th Adresse
          %th Beschreibung
          %th Type
          %th Zeit
        %tbody
      ~@ipadresses.each do |ip|
        %tr
          %td 
            %a{:href => '/ipadress/' << ip['_id'].to_s}=  ip['adress']
          %td= ip['adress'] ? ip['description'] : '&nbsp'
          %td= ip['type']
          %td= ip['time']


